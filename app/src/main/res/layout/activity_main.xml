<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.susananaranjovillamil.orale.MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorfond_2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0pt"
        android:layout_marginRight="0pt"
        android:layout_weight="0.22"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="1dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:fontFamily="Georgina Demo"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="Ã“RALE"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2"
        android:background="@color/colorfond"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            android:src="@mipmap/homme_entier_1"
            android:paddingRight="350dp"
            android:paddingTop="100dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="700dp"
            android:src="@drawable/homme_entier_02"
            android:paddingLeft="350dp"
            android:paddingTop="100dp"
            />

        <Button

            android:id="@+id/button_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="130dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="220dp"
            android:id="@+id/button_2" />

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="290dp"
            android:id="@+id/button_3"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="380dp"
            android:id="@+id/button_4"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="450dp"
            android:id="@+id/button_5"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="160dp"
            android:layout_marginLeft="180dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="290dp"
            android:id="@+id/button_6"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="160dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="290dp"
            android:id="@+id/button_7"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="290dp"
            android:id="@+id/button_8"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="290dp"
            android:id="@+id/button_9"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="430dp"
            android:layout_marginTop="130dp"
            android:id="@+id/button_10"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="390dp"
            android:layout_marginTop="240dp"
            android:id="@+id/button_11"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="425dp"
            android:layout_marginTop="280dp"
            android:id="@+id/button_12"/>

        <Button
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="425dp"
            android:layout_marginTop="360dp"
            android:id="@+id/button_13"/>

        <Button
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="415dp"
            android:layout_marginTop="450dp"
            android:id="@+id/button_14"/>

        <GridView
            android:id="@+id/list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:numColumns="2"
            android:padding="5pt"
            android:stretchMode="columnWidth"
            android:paddingRight="400dp"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded"></GridView>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0pt"
        android:layout_marginRight="0pt"
        android:background="@color/colorfond_2"
        android:orientation="horizontal"
        android:padding="5pt"
        android:weightSum="1">


        <GridView
            android:id="@+id/list_selected"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:numColumns="5"
            android:padding="0dp"
            android:stretchMode="columnWidth"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded"></GridView>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/check2"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>




</RelativeLayout>
