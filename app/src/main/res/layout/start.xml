<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0pt"
        android:layout_marginRight="0pt"
        android:layout_weight="0.22"
        android:background="@color/colorfond_2"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="1dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="Ã“rale"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/colorfond"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout">


        <Button
            android:id="@+id/addButton"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/bustes_01"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/Femme"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignTop="@+id/addButton"
            android:layout_toEndOf="@+id/addButton"
            android:background="@drawable/bustes_02" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorfond_2"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingTop="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <Button
            android:id="@+id/conversationButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/doctor" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>


</RelativeLayout>